---
import { getI18N } from '@/i18n'

const { currentLocale } = Astro
const lang = getI18N({ currentLocale })

const { HEADER_OPTIONS } = lang
---

<header
  id="header"
  class="flex justify-center items-center mx-auto py-5 sticky top-0 w-full xl:w-[1120px] z-10"
>
  <nav
    class="border border-primary rounded-full px-3 py-1 flex flex-row items-center bg-primary-200 backdrop-blur-2xl"
  >
    {
      HEADER_OPTIONS.map(({title, url}) => {
        return (
          <a class="hover:bg-white/10 rounded-full px-3 transition" href={url}>
            {title}
          </a>
        )
      })
    }
  </nav>
</header>
